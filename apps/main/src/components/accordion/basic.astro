---
const primary_color = "#3498db";
const secondary_color = "#2ecc71";
const text_color = "#ecf0f1";
const border_radius = "6px";
const transition_duration = "0.3s";
---

<style define:vars={{primary_color, secondary_color, text_color, border_radius, transition_duration}}>
    section {
        font-family: 'Arial', sans-serif;
        background-color: #ecf0f1;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        color: #34495e;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .accordion {
        background-color: var(--primary_color);
        color: var(--text_color);
        cursor: pointer;
        padding: 15px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 18px;
        transition: background-color var(--transition_duration);
        border-radius: var(--border_radius);
        margin-bottom: 10px;
    }

    .accordion:hover, .accordion.active {
        background-color: var(--secondary_color);
    }

    .panel {
        padding: 0 15px;
        max-height: 0;
        overflow: hidden;
        transition: max-height var(--transition_duration) ease-out;
        border-radius: 0 0 var(--border_radius) var(--border_radius);
        border: 1px solid #bdc3c7;
        border-top: none;
        margin-bottom: 10px;
    }

    .panel p {
        margin: 0;
    }
</style>

<section>
    <h2>Accordion</h2>
    <button class="accordion">Section 1</button>
