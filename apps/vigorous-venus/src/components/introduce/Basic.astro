---
 import {css} from "../../../styled-system/css"

 interface RootVariables {
  primaryColor: string;
  textColor: string;
  buttonHoverColor: string;
  borderRadius: string;
  fontFamily: string;
  maxWidth: string;
  containerMargin: string;
  containerPadding: string;
  imageMaxWidth: string;
  imageBorderRadius: string;
}

interface Styles {
  body: {
    fontFamily: string;
    margin: string;
    padding: string;
    backgroundColor: string;
  };
  header: {
    backgroundColor: string;
    color: string;
    padding: string;
    textAlign: string;
  };
  companyContainer: {
    maxWidth: string;
    margin: string;
    padding: string;
    backgroundColor: string;
    boxShadow: string;
    borderRadius: string;
  };
  companyImage: {
    maxWidth: string;
    height: string;
    borderRadius: string;
  };
  companyInfo: {
    marginTop: string;
  };
  h2: {
    color: string;
  };
  p: {
    color: string;
  };
  ctaButton: {
    display: string;
    padding: string;
    backgroundColor: string;
    color: string;
    textDecoration: string;
    borderRadius: string;
    transition: string;
  };
  ctaButtonHover: {
    backgroundColor: string;
  };
}

const rootVariables: RootVariables = {
  primaryColor: "#5C3C11",
  textColor: '#555',
  buttonHoverColor: '#0056b3',
  borderRadius: '5px',
  fontFamily: "'Arial', sans-serif",
  maxWidth: '800px',
  containerMargin: '20px',
  containerPadding: '20px',
  imageMaxWidth: '100%',
  imageBorderRadius: 'var(--border-radius)',
};

const styles: Styles = {
  body: {
    fontFamily: rootVariables.fontFamily,
    margin: '0',
    padding: '0',
    backgroundColor: '#f8f8f8',
  },
  header: {
    backgroundColor: rootVariables.primaryColor,
    color: '#fff',
    padding: '20px',
    textAlign: 'center',
  },

 companyContainer: {
  maxWidth: rootVariables.maxWidth,
  margin: `${rootVariables.containerMargin} auto`,
  padding: rootVariables.containerPadding,
  backgroundColor: '#fff',
  boxShadow: '0 0 10px rgba(0, 0, 0, 0.1)',
  borderRadius: rootVariables.borderRadius,

  "& h2": {
    color: rootVariables.primaryColor,
  },

  "& p": {
    color: rootVariables.primaryColor,
    fontSize: '16px',  // 변경된 부분
    lineHeight: '1.5',  // 변경된 부분
    // 다른 원하는 스타일 속성들을 여기에 추가할 수 있습니다.
  }
},
  companyImage: {
    maxWidth: rootVariables.imageMaxWidth,
    height: 'auto',
    borderRadius: rootVariables.imageBorderRadius,
  },
  companyInfo: {
    marginTop: '20px',
  },
  
  ctaButton: {
    display: 'inline-block',
    padding: '10px 20px',
    backgroundColor: rootVariables.primaryColor,
    color: '#fff',
    textDecoration: 'none',
    borderRadius: rootVariables.borderRadius,
    transition: 'background-color 0.3s ease',
    "&:hover":{
      backgroundColor: rootVariables.buttonHoverColor,
    }
  },
  
};

const header="명인 점포";


const content = {
  title: "소개",
  description: `${header}는 신선하고 맛있는 만두를 제공하는 가게로, 최상의 재료와 정성스러운 손길로 고객들에게 최고의 맛을 전해드립니다.`,
  subtitle: "우리의 만두",
  subDescription: `${header}는 다양한 만두 종류를 보유하고 있으며, 매일 신선하게 만들어지는 만두는 언제나 최상의 품질을 유지합니다. 우리의 만두로 특별한 순간을 즐겨보세요.`,
  imageUrl: "./만두.avif",
  alt:'mendu',
  link: "#order-now",
};

---

<header class={css(styles.header)}>
  <h1>{header}</h1>
</header>

<div class={css(styles.companyContainer)}>
  <img src={content.imageUrl} alt={content.alt} class={css(styles.companyImage)}>
  <div class={css(styles.companyInfo)} >
    <div>
      <h2>{content.title}</h2>
      <p>{content.description}</p>
    </div>
    <div>
      <h2>{content.subtitle}</h2>
      <p>{content.subDescription}</p>
      <a href={content.link} class={css(styles.ctaButton)}>지금 주문하기</a>
    </div>
  </div>
</div>


