---
interface BusinessHours {
    weekday: string;
    saturday: string;
    sunday: string;
}

const businessHours: BusinessHours = {
    weekday: '9:00 AM - 6:00 PM',
    saturday: '10:00 AM - 4:00 PM',
    sunday: '휴무',
};

const businessHoursContainer = {
    border: "1px solid #ddd",
    padding: "10px",
    borderRadius: "8px",
    margin: "10px",
};

const dayStyle = {
    margin: "5px 0",
    color: "#333",
}

---
    
    <div style={businessHoursContainer}>
        <p>영업시간</p>
        <div style={dayStyle}>평일: {businessHours.weekday}</div>
        <div style={dayStyle}>토요일: {businessHours.saturday}</div>
        <div style={dayStyle}>일요일: {businessHours.sunday}</div>
    </div>

